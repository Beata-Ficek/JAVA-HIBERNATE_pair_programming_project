

<div class="topbar-container">
     <h1 align="center"> TECHNEWS MANAGEMENT</h1>
</div>

<div class = "content-container">
    <div class="flex-container">

        <div>
             <a href="/articles/new" class="button-create"> Create an Article</a>
        </div>



        <div>
            <form action="/articles" method="get">
                <label for="category">Category:</label>
                <br>
                <select id="category" name="category">
                    #foreach( $category in $categories )
                    <option value="$category.getId()">$category.getName()</option>
                    #end
                </select>
                <input type="submit" value="Submit">
            </form>
        </div>


        <div>
            <form action="/articles" method="get">
                <label for="journalist">Journalist:</label>
                <br>
                <select id="journalist" name="journalist">
                    #foreach( $journalist in $journalists )
                    <option value="$journalist.getId()">$journalist.getName()</option>
                    #end
                </select>
                <input type="submit" value="Submit">
            </form>
        </div>



        <div>
            <form action="/articles" method="get">
                <label for="search" id="search">Search for an article: </label>
                <input type="search" placeholder="Search.." name="matchString">
                <input type="submit" value="Submit">
            </form>
        </div>

        <div>
            <a href="/articles" class="button-create">Back</a>
        </div>


    </div>
    <div class="table-container">

        #if ($searchResults.size() > 0)

        #foreach($searchResult in $searchResults)
        <table class="article-break" style="width:100%">


            <tr>
                <th> Headline: </th>
                <td> $searchResult.getHeadline()</td>
            </tr><tr>
            <th> Strapline: </th>
            <td> $searchResult.getStrapline()</td>
        </tr><tr>
            <th> Category: </th>
            <td>$searchResult.getCategory().getName()</td>
        </tr><tr>
            <th>See full article:</th>
            <td><a href="/articles/$searchResult.getId()" class="button-details">Details</a></td>
        </tr>

        </table>
        #end
        #else

        #foreach($article in $articles)
        <table class="article-table" style="width:100%">

            <tr>
                <th>Headline:</th>
                <td>$article.getHeadline()</td>
            </tr>
            <tr>
                <th>Strapline:</th>
                <td>$article.getStrapline()</td>
            </tr>
            <tr>
                <th>Article category:</th>
                <td>$article.getCategory().getName()</td>
            </tr>
            <tr class="padded-tr">
                <th> See full article:</th>
                <td> <a href="/articles/$article.getId()" class="button-details">Details</a></td>
            </tr>



        </table>
        #end
        #end
        </div>
    </div>

</div>




